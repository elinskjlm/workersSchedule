<body class="d-flex flex-column">

    <main class="container my-3 col-md-6">
        <div class="container my-3">
            <h1 class="text-center">הפעלת / כיבוי הטופס</h1>
        </div>



        <div class="container my-3 border border-info rounded">
            <div class="row d-flex align-items-center">
                <div class="col p-2 d-flex justify-content-center text-center text-justify align-items-center align-text-center">
                    <p class="m-0">מצב הטופס:</p>
                </div>
                <div class="col p-2 d-flex justify-content-center text-center text-justify">
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" name="btnradio" id="btnOff" autocomplete="off" checked>
                        <label class="btn btn-sm btn-outline-danger" for="btnOff">כבוי</label>
                        <input type="radio" class="btn-check" name="btnradio" id="btnOn" autocomplete="off">
                        <label class="btn btn-sm btn-outline-success" for="btnOn">זמין</label>
                      </div>
                </div>
            </div>
        </div>

    </main>


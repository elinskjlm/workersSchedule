<% layout('layouts/boilerplate') %>

<div class="container-lg my-3">
    <h1 class="text-center">ניהול בקשות לסידורי עבודה</h1>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">מחיקת סידור</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>האם למחוק את הסידור?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-outline-secondary ms-3"
                    data-bs-dismiss="modal">להשאיר</button>
                <button type="button" id="btnModalDel" class="btn btn-sm btn-outline-danger ms-3"
                    data-bs-dismiss="modal">למחוק</button>
            </div>
        </div>
    </div>
</div>

<div class="container-lg mb-3 align-items-center">
    <div class="row mb-3 d-flex align-items-center border border-info rounded">
        <div class="row p-2 text-center">
            <h5 class="col m-0">סינון סידורים</h5>
            <div id="update-button" class="col-1 btn btn-info btn-sm">עדכון</div>
        </div>
        <div class="row">
        <div class="col-2 py-2 d-flex justify-content-center">
            <div class="btn-group-vertical btn-group-sm" role="group" aria-label="radio toggle button group">
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-yes" value="on"
                    autocomplete="off">
                <label class="btn btn-outline-info" for="radio-open-yes">לטיפול</label>
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-neutral" value=""
                    autocomplete="off" checked>
                <label class="btn btn-outline-info" for="radio-open-neutral">לא משנה</label>
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-no" value="off"
                    autocomplete="off">
                <label class="btn btn-outline-info" for="radio-open-no">טופלו</label>
            </div>
        </div>
            <div class="col-2 py-2 d-flex justify-content-center">
                <div class="btn-group-vertical btn-group-sm" role="group" aria-label="radio toggle button group">
                    <input type="radio" class="btn-check" name="radio-proper" id="radio-proper-yes" value="on"
                        autocomplete="off">
                    <label class="btn btn-outline-info" for="radio-proper-yes">תקינים</label>
                    <input type="radio" class="btn-check" name="radio-proper" id="radio-proper-neutral"
                        value="" autocomplete="off" checked>
                    <label class="btn btn-outline-info" for="radio-proper-neutral">לא משנה</label>
                    <input type="radio" class="btn-check" name="radio-proper" id="radio-proper-no" value="off"
                        autocomplete="off">
                    <label class="btn btn-outline-info" for="radio-proper-no">לא תקינים</label>
                </div>
            </div>
            <div class="col-2 py-2 d-flex justify-content-center">
                <div class="btn-group-vertical btn-group-sm" role="group" aria-label="radio toggle button group">
                    <input type="radio" class="btn-check" name="radio-seen" id="radio-seen-yes" value="on"
                        autocomplete="off">
                    <label class="btn btn-outline-info" for="radio-seen-yes">נקראו</label>
                    <input type="radio" class="btn-check" name="radio-seen" id="radio-seen-neutral"
                        value="" autocomplete="off" checked>
                    <label class="btn btn-outline-info" for="radio-seen-neutral">לא משנה</label>
                    <input type="radio" class="btn-check" name="radio-seen" id="radio-seen-no" value="off"
                        autocomplete="off">
                    <label class="btn btn-outline-info" for="radio-seen-no">לא נקראו</label>
                </div>
            </div>
            <div class="col-3 py-2 d-flex justify-content-center">
                <%- include('../partials/weekPicker') %>
            </div>
            <div class="col-3 py-2 d-flex justify-content-center">
                <div class="input-group input-group-sm">
                    <span class="input-group-text">שם</span>
                    <datalist id="names-list"></datalist>
                    <input type="text" id="names-field" name="names-field" list="names-list" class="form-control"
                        aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
                </div>
            </div>
        </div>
        <!-- <div class="col-1 py-2 d-flex justify-content-center">
            <div id="update-button" class="btn btn-info btn-sm">עדכון</div>
        </div> -->
    </div>
    <div class="row d-flex align-items-center border border-info rounded">
        <div class="table-responsive">
            <table id="table" class="table table-striped table-hover">
                <thead>
                    <th>מס&quot;ד</th>
                    <th>מס&#39; מזהה</th>
                    <th>שנה</th>
                    <th>שבוע</th>
                    <th>שם מלא</th>
                    <th>מועד הגשה</th>
                    <th>פעולות</th>
                    <th>תקין?</th>
                    <th>נקרא?</th>
                    <th>לינק</th>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="../scripts/schedulesControl.js"></script>

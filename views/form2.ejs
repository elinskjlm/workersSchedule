<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker Shift Selection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        <h1>Worker Shift Selection</h1>
        <form>
            <div class="form-group mb-3">
                <label for="workerName">Worker Name:</label>
                <input type="text" class="form-control" id="workerName" name="workerName" placeholder="Enter your name">
            </div>
            <% for (let i=0; i < 7; i++) { %>
                <div class="row shifts">
                    <div class="col-md-2 border p-2 text-center">Day <%= i + 1 %>
                    </div>
                    <div class="col border p-2 d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="morning<%= i + 1 %>"
                                name="shifts[<%= i + 1 %>][morning]" value="morning">
                            <label class="form-check-label" for="morning<%= i + 1 %>">Morning Shift</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="noon<%= i + 1 %>"
                                name="shifts[<%= i + 1 %>][noon]" value="noon">
                            <label class="form-check-label" for="noon<%= i + 1 %>">Noon Shift</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="night<%= i + 1 %>"
                                name="shifts[<%= i + 1 %>][night]" value="night">
                            <label class="form-check-label" for="night<%= i + 1 %>">Night Shift</label>
                        </div>

                    </div>
                </div>
                <div class="row toggles">

                    <div class="col offset-2 border p-2 d-flex justify-content-between">

                        <div class="ms-2">
                            <button type="button" class="btn btn-sm btn-outline-primary ot-button"
                                data-target="morning<%= i + 1 %>">OT</button>
                        </div>

                        <div class="ms-2 d-flex">
                            <button type="button" class="btn btn-sm btn-outline-primary ot-button"
                                data-target="nightA<%= i + 1 %>">OT A</button>
                            <button type="button" class="btn btn-sm btn-outline-primary ot-button"
                                data-target="nightB<%= i + 1 %>">OT B</button>
                        </div>
                    </div>
                </div>
                <% } %>
                <button type="submit" class="btn btn-primary mt-3">Submit Selection</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        const otButtons = document.querySelectorAll('.ot-button');
        otButtons.forEach(button => {
            button.addEventListener('click', function () {
                const targetCheckbox = document.getElementById(this.dataset.target);
                if (targetCheckbox.checked) {
                    this.classList.remove('btn-outline-primary');
                    this.classList.add('btn-primary'); // Change button color on click
                } else {
                    this.classList.remove('btn-primary');
                    this.classList.add('btn-outline-primary'); // Change button color back on uncheck
                }
            });
        });
    </script>


</body>

</html>
<% layout('layouts/boilerplate') %>

<div class="container-lg my-3">
    <h1 class="text-center">ניהול בקשות לסידורי עבודה</h1>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">מחיקת סידור</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>האם למחוק את הסידור?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-outline-secondary ms-3"
                    data-bs-dismiss="modal">להשאיר</button>
                <button type="button" id="btnModalDel" class="btn btn-sm btn-outline-danger ms-3"
                    data-bs-dismiss="modal">למחוק</button>
            </div>
        </div>
    </div>
</div>

<div class="container-lg mb-3 align-items-center">
    <div class="row mb-3 d-flex align-items-center border border-info rounded">
        <div class="p-2 text-center">
            <h5 class="m-0">סינון סידורים</h5>
        </div>
        <div class="col-2 p-2 d-flex justify-content-center">
            <div class="btn-group-vertical btn-group-sm" role="group" aria-label="radio toggle button group">
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-yes" value="on"
                    autocomplete="off">
                <label class="btn btn-outline-info" for="radio-open-yes">רק פתוחים</label>
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-neutral" value=""
                    autocomplete="off" checked>
                <label class="btn btn-outline-info" for="radio-open-neutral">לא משנה</label>
                <input type="radio" class="btn-check" name="radio-open" id="radio-open-no" value="off"
                    autocomplete="off">
                <label class="btn btn-outline-info" for="radio-open-no">רק סגורים</label>
            </div>
        </div>
        <div class="col-2 p-2 d-flex justify-content-center">
            <div class="btn-group-vertical btn-group-sm" role="group" aria-label="radio toggle button group">
                <input type="radio" class="btn-check" name="radio-permanent" id="radio-permanent-yes" value="on"
                    autocomplete="off" disabled>
                <label class="btn btn-outline-info" for="radio-permanent-yes">רק קבועים</label>
                <input type="radio" class="btn-check" name="radio-permanent" id="radio-permanent-neutral"
                    value="" autocomplete="off" checked disabled>
                <label class="btn btn-outline-info" for="radio-permanent-neutral">לא משנה</label>
                <input type="radio" class="btn-check" name="radio-permanent" id="radio-permanent-no" value="off"
                    autocomplete="off" disabled>
                <label class="btn btn-outline-info" for="radio-permanent-no">רק רגילים</label>
            </div>
        </div>
        <div class="col-3 p-2 d-flex justify-content-center">
            <%- include('../partials/weekPicker') %>
        </div>
        <div class="col-4 p-2 d-flex justify-content-center">
            <div class="input-group input-group-sm">
                <span class="input-group-text">שם</span>
                <datalist id="names-list"></datalist>
                <input type="text" id="names-field" name="names-field" list="names-list" class="form-control"
                    aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
            </div>
        </div>
        <div class="col-1 p-2 d-flex justify-content-center">
            <div id="update-button" class="btn btn-info btn-sm">עדכון</div>
        </div>

    </div>
    <div class="row d-flex align-items-center border border-info rounded">
        <div class="table-responsive">
            <table id="table" class="table table-striped table-hover">
                <thead>
                    <th>מס&quot;ד</th>
                    <th>מס&#39; מזהה</th>
                    <th>שנה</th>
                    <th>שבוע</th>
                    <th>שם מלא</th>
                    <th>מועד הגשה</th>
                    <th>פעולות</th>
                    <th>לינק</th>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="../scripts/schedulesControl.js"></script>

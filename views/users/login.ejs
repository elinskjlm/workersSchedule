<body class="mb-5 d-flex flex-column">
    <main class="container col-lg-6 col-md-8 mt-5">
        <div class="container mb-5">
            <h1 class="text-center">כניסת משתמש</h1>
        </div>
        <form class="container">
            <div>
                <div class="input-group input-group-sm my-2">
                    <span class="input-group-text">שם משתמש</span>
                    <input type="text" id="loginUsername" name="loginUsername" class="form-control" autocomplete="" required/>
                </div>
                <div class="input-group input-group-sm my-2">
                    <span class="input-group-text">סיסמה</span>
                    <input type="password" id="loginPassword" name="loginPassword" class="form-control" autocomplete="" required/>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" id="btnLogin" class="btn btn-sm btn-outline-primary me-3">כניסה</button>
            </div>
        </form>
    </main>



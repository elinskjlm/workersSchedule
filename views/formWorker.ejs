<!DOCTYPE html>
<html lang="he" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>הגשת סידור</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="formWorker.css" rel="stylesheet">
</head>

<body class="mb-5 d-flex flex-column">

    <main class="container mt-5">
        <div class="container mb-5">
            <h1 class="text-center">טופס הגשת סידור עבודה</h1>
            <h2 class="text-center">עבור שבוע: </h2>
        </div>
        <form action="/worksche" method="GET">
            <div class="container mb-5">
                <label class="form-label" for="fullName" id="uniqueID">
                    <h5>שם מלא</h5>
                </label>
                <input class="form-control" type="text" name="fullName" id="fullName" placeholder="שם פרטי ומשפחה"
                    required value="">
            </div>
            <div class="container mb-5">
                <label class="form-label" for="fullName">
                    <h5>בחירת משמרות</h5>
                </label>
                <div class="row border-bottom">
                    <div class="col p-2 d-flex justify-content-center">
                        יום בשבוע
                    </div>
                    <div class="col p-2 d-flex justify-content-center">
                        משמרת בוקר
                    </div>
                    <div class="col p-2 d-flex justify-content-center">
                        משמרת צהרים
                    </div>
                    <div class="col p-2 d-flex justify-content-center">
                        משמרת לילה
                    </div>
                </div>
                <% const days=["ראשון", "שני" , "שלישי" , "רביעי" , "חמישי" , "שישי" , "שבת" ]; %>
                    <% for (let i=0; i < 7; i++) { %>
                        <div class="row row-shifts">
                            <div class="col p-2 d-flex justify-content-center">
                                <%= days[i] %>
                            </div>
                            <div class="col p-2 d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="morning"
                                        name="shifts[<%= i + 1 %>][morning]">
                                </div>
                            </div>
                            <div class="col p-2 d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="noon"
                                        name="shifts[<%= i + 1 %>][noon]">
                                </div>
                            </div>
                            <div class="col p-2 d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="night"
                                        name="shifts[<%= i + 1 %>][night]">
                                </div>
                            </div>
                        </div>
                        <div class="row row-ot border-bottom hidden">
                            <div class="col p-2 d-flex justify-content-center">

                            </div>
                            <div class="col p-2 d-flex justify-content-center align-items-center">
                                <button type="button" class="btn btn-sm btn-outline-primary disabled ot-button morning" value=""
                                    data-target="morning">עד 19:00</button>
                            </div>                            
                            <div class="col p-2 d-flex justify-content-center align-items-center">

                            </div>
                            <div class="col p-2 d-flex justify-content-center">

                                <div class="col p-2 d-flex justify-content-center align-items-center">
                                    <div class="ms-2 d-flex flex-wrap justify-content-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary disabled ot-button night" value=""
                                            data-target="nightA">מ- 19:00</button>
                                        <button type="button" class="btn btn-sm btn-outline-primary disabled ot-button night" value=""
                                            data-target="nightB">עד 11:00</button>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <% } %>
            </div>
            <div class="container mb-5">
                <label class="form-label" for="comment">
                    <h5>הערות מיוחדות</h5>
                </label>
                <input class="form-control" type="text" name="comment" id="comment" value="">
            </div>
            <button type="submit" class="btn btn-primary mt-3">הגשת הסידור</button>
        </form>
    </main>

    <script src="./formWorker.js" defer></script>
